---
import { getEntry } from 'astro:content';

export interface Props {
  slug: string;
  title: string;
  description: string;
  publishDate: Date;
  tags: string[];
}

const { slug, title, description, publishDate, tags } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group relative overflow-hidden rounded-lg border border-zinc-200 bg-white transition-all hover:border-primary-300 hover:shadow-md dark:border-zinc-700 dark:bg-zinc-800 dark:hover:border-primary-700">
  <a href={`/blog/${slug}`} class="absolute inset-0 z-10">
    <span class="sr-only">Read {title}</span>
  </a>
  
  <div class="flex flex-col gap-3 p-6 sm:flex-row sm:items-center sm:justify-between sm:gap-6">
    <div class="flex-1 space-y-2">
      <div class="flex items-center gap-3">
        <time datetime={publishDate.toISOString()} class="flex-shrink-0 text-sm text-zinc-500 dark:text-zinc-400">
          {formattedDate}
        </time>
        {tags.length > 0 && (
          <>
            <span class="hidden text-zinc-300 dark:text-zinc-700 sm:inline">â€¢</span>
            <div class="hidden flex-wrap gap-2 sm:flex">
              {tags.map((tag) => (
                <span class="rounded-full border border-transparent bg-zinc-100 px-2.5 py-0.5 text-xs font-medium text-zinc-700 dark:border-zinc-700/50 dark:bg-zinc-800/60 dark:text-zinc-300">
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
      </div>
      
      <h3 class="text-xl font-bold text-zinc-700 transition-colors group-hover:text-primary-600 dark:text-zinc-200 dark:group-hover:text-primary-400">
        {title}
      </h3>
      
      <p class="text-zinc-600 dark:text-zinc-400">
        {description}
      </p>

      {tags.length > 0 && (
        <div class="mt-2 flex flex-wrap gap-2 sm:hidden">
          {tags.map((tag) => (
            <span class="rounded-full border border-transparent bg-zinc-100 px-2.5 py-0.5 text-xs font-medium text-zinc-700 dark:border-zinc-700/50 dark:bg-zinc-800/60 dark:text-zinc-300">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>

  </div>
</article>

