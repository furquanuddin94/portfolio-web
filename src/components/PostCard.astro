---
import { getEntry } from 'astro:content';

export interface Props {
  slug: string;
  title: string;
  description: string;
  publishDate: Date;
  tags: string[];
}

const { slug, title, description, publishDate, tags } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group relative overflow-hidden rounded-lg border border-zinc-200 bg-white transition-all hover:border-primary-300 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900 dark:hover:border-primary-700">
  <a href={`/blog/${slug}`} class="absolute inset-0 z-10">
    <span class="sr-only">Read {title}</span>
  </a>
  
  <div class="flex flex-col gap-3 p-6 sm:flex-row sm:items-center sm:justify-between sm:gap-6">
    <div class="flex-1 space-y-2">
      <div class="flex flex-wrap items-center gap-3">
        <time datetime={publishDate.toISOString()} class="text-sm text-zinc-500 dark:text-zinc-400">
          {formattedDate}
        </time>
        {tags.length > 0 && (
          <>
            <span class="text-zinc-300 dark:text-zinc-700">â€¢</span>
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <span class="rounded-full bg-zinc-100 px-2.5 py-0.5 text-xs font-medium text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
      </div>
      
      <h3 class="text-xl font-bold text-zinc-900 transition-colors group-hover:text-primary-600 dark:text-zinc-100 dark:group-hover:text-primary-400">
        {title}
      </h3>
      
      <p class="text-zinc-600 dark:text-zinc-400">
        {description}
      </p>
    </div>

    <div class="flex items-center text-primary-600 dark:text-primary-400 sm:flex-shrink-0">
      <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</article>

