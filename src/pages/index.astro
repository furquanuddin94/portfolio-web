---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);

const siteURL = Astro.site || 'https://your-domain.com';
const canonicalURL = new URL('/', siteURL);
---

<BaseLayout
  title="Portfolio"
  description="Welcome to my portfolio and blog"
  canonicalURL={canonicalURL}
>
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-950 dark:to-slate-900 py-20 sm:py-32">
      <div class="absolute inset-0 bg-grid-slate-900/[0.04] dark:bg-grid-slate-400/[0.05] bg-[size:20px_20px] [mask-image:radial-gradient(ellipse_at_center,white,transparent)]"></div>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
            <span class="gradient-text">Welcome to My Portfolio</span>
          </h1>
          <p class="text-xl sm:text-2xl text-slate-600 dark:text-slate-400 mb-8 leading-relaxed">
            I'm a developer passionate about building great experiences. Here you'll find my work and thoughts on technology.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/blog"
              class="inline-block px-8 py-4 rounded-lg bg-slate-900 dark:bg-slate-100 text-white dark:text-slate-900 hover:bg-slate-800 dark:hover:bg-slate-200 transition-all transform hover:scale-105 font-semibold shadow-lg"
            >
              Read Blog
            </a>
            <a
              href="#about"
              class="inline-block px-8 py-4 rounded-lg border-2 border-slate-900 dark:border-slate-100 text-slate-900 dark:text-slate-100 hover:bg-slate-900 dark:hover:bg-slate-100 hover:text-white dark:hover:text-slate-900 transition-all font-semibold"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Posts Section -->
    {posts.length > 0 && (
      <section class="py-16 sm:py-24 bg-white dark:bg-slate-950">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between mb-12">
            <div>
              <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-slate-100 mb-2">
                Recent Posts
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                Latest thoughts and tutorials
              </p>
            </div>
            <a
              href="/blog"
              class="hidden sm:inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline font-medium"
            >
              View All
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <PostCard post={post} />
            ))}
          </div>
          <div class="mt-12 text-center sm:hidden">
            <a
              href="/blog"
              class="inline-block px-6 py-3 rounded-lg bg-slate-900 dark:bg-slate-100 text-white dark:text-slate-900 hover:bg-slate-800 dark:hover:bg-slate-200 transition-colors font-medium"
            >
              View All Posts
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- About Section -->
    <section id="about" class="py-16 sm:py-24 bg-slate-50 dark:bg-slate-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-slate-100 mb-6">
            About
          </h2>
          <div class="prose prose-slate dark:prose-invert prose-lg max-w-none">
            <p class="text-lg text-slate-700 dark:text-slate-300 leading-relaxed">
              This is a space where I share my thoughts, projects, and learnings. Feel free to explore and reach out if you'd like to connect.
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

